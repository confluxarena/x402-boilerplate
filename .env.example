# ============================================
# x402 Boilerplate — Environment Configuration
# ============================================
# Copy to .env and fill in your values:
#   cp .env.example .env

# ── Database (PostgreSQL) ──
DB_PGSQL_HOST=db
DB_PGSQL_PORT=5432
DB_PGSQL_NAME=x402
DB_PGSQL_USER=x402
DB_PGSQL_PASS=your_db_password

# ── Blockchain ──
# Relayer wallet private key (pays gas for on-chain settlement)
# Must have CFX balance on Conflux eSpace (chain 1030)
ARENA_SIGNER_PRIVATE_KEY=0x_your_relayer_private_key

# Treasury address — receives USDT0 payments from buyers
X402_API_TREASURY=0x_your_treasury_address

# ── x402 Facilitator ──
# Shared secret between PHP backend and Node.js facilitator
X402_FACILITATOR_KEY=your_random_secret_key

# Facilitator port (default: 3849)
X402_FACILITATOR_PORT=3849

# Escrow adapter address (optional — only needed for escrow mode)
# X402_ADAPTER_ADDRESS=0x_your_adapter_address

# ── AI API ──
# Anthropic Claude API key
CLAUDE_API_KEY=sk-ant-your_anthropic_api_key

# Claude model (default: claude-3-5-haiku-20241022)
CLAUDE_MODEL=claude-3-5-haiku-20241022

# Price per query in USDT0 (6 decimals). 10000 = 0.01 USDT0
X402_API_PRICE=10000

# ── Demo Page ──
# Private key for server-side demo payments (needs USDT0 balance)
DEMO_BUYER_KEY=0x_your_demo_wallet_private_key

# AI endpoint URL (used by facilitator's demo-ai handler)
# In Docker with network_mode: "service:web", use localhost (facilitator shares web's network)
API_URL=http://localhost/api/x402/ai.php

# App URL for CORS
APP_URL=http://localhost

# ── Agent Safety ──
# Maximum USDT0 the agent can spend per session (default: 1.0)
# Set to 0 to disable spending cap
AGENT_SPEND_CAP=1.0
